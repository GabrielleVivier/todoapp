<h1>Todo List</h1>

<div class="notice">
  <%= flash[:notice] %>
</div> <br>

<table class="tab">

  <th>Name</th>
  <th>Priority</th>
  <th>Due Date</th>
  <th>Edit</th>
  <th>Delete</th>

  <% @tasks.each do |task|%>
    <tr>
      <td> <%= link_to task.name, task_path(task) %> </td>

      <td> <%= task.priority %> </td>

      <td> <%= task.due_date %> </td>

      <td> <%= link_to 'Edit', edit_task_path(task) %> </td>

      <td> <%= link_to 'Delete', task_path(task), method: :delete%> </td>

    </tr>
  <% end %>

</table> <br>


<%= link_to 'Add a new task to your todo list', new_task_path %>